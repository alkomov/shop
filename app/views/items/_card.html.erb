<div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
  <div class="card fill">
    <%= image_tag item.image, class: "card-img-top" %>
    <div class="card-body">
      <h5><%= item.title %></h5>
      <p class="card-text"><%= item.description %></p>
    </div>
    <div class="card-footer bg-white d-flex align-items-center">
      <strong><%= number_to_currency(item.price, precision: 0, unit: "", delimiter: " ") %>р.</strong>
      <div class="bg-white d-flex align-items-center">
  <%= link_to('В корзину', add_to_cart_item_path(item), method: :post, class: 'btn btn-primary mr-auto' ) %>
</div>    
</div>
  </div>
</div>